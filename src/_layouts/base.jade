//- Custom Configuration
block config
  //- Setup site's base URL to match the "baseUrl" key within `package.json`
  //- Otherwise default to relative pathing
  - var baseUrl = config.baseUrl || './'
  - var pageClass = config.pageClass || 'default'

doctype html

<!--[if lt IE 9]>
<html class='lt-ie9 no-js' lang='en'>
<![endif]-->
<!--[if gte IE 9]><!-->
<html class='no-js' lang='en'>
<!--<![endif]-->

head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  title second
  meta(name='description', content= 'A new Yeogurt application')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(href="https://fonts.googleapis.com/css?family=Damion", rel="stylesheet")
  link(href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900", rel="stylesheet")
  
  block stylesheets
    link(rel='stylesheet', href= baseUrl + 'styles/main.css')

body.ui-page(class="ui-page--" + pageClass)
  <!--[if lt IE 9]>
  <p class='browsehappy'>You are using an <strong>outdated</strong> browser. Please <a href='http://browsehappy.com/'>upgrade your browser</a> to improve your experience.</p>
  <![endif]-->
  .ui-header
    .ui-header__content
      .ui-header__logo
        .ui-logo acrostia
      .ui-header__menu
        nav.ui-menu
          .ui-menu__item(class="ui-menu__item--" + pageClass)
            a.ui-menu__link(class="ui-menu__link--" + pageClass + (pageClass === 'home' ? " ui-menu__link--active" : ''), href="/") Home
          .ui-menu__item(class="ui-menu__item--" + pageClass)
            a.ui-menu__link(class="ui-menu__link--" + pageClass + (pageClass === 'services' ? " ui-menu__link--active" : ''), href="/services/") Services
          .ui-menu__item(class="ui-menu__item--" + pageClass)
            a.ui-menu__link(class="ui-menu__link--" + pageClass + (pageClass === 'about' ? " ui-menu__link--active" : ''),  href="/about/") About
          .ui-menu__item(class="ui-menu__item--" + pageClass)
            a.ui-menu__link(class="ui-menu__link--" + pageClass + (pageClass === 'work' ? " ui-menu__link--active" : ''), href="/work/") Work
          .ui-menu__item(class="ui-menu__item--" + pageClass)
            a.ui-menu__link(class="ui-menu__link--" + pageClass + (pageClass === 'contacts' ? " ui-menu__link--active" : ''), href="/contacts/") Contacts
  .ui-content

  block content

  block scripts
    script(src= baseUrl + 'scripts/main.js')

</html>
